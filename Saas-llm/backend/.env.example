# Database Configuration
DATABASE_URL=sqlite:///./saas_llm.db

# Vector Database
CHROMA_DB_PATH=./chroma_db

# LLM Configuration
LLM_API_URL=http://localhost:11434  # Local Ollama for development
LLM_MODEL=llama2  # Available models: llama2, mistral, codellama
# For production, change to: https://your-gpu-server.com/api

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=["application/pdf"]
UPLOAD_DIR=./uploads

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Environment
ENVIRONMENT=development  # development, staging, production